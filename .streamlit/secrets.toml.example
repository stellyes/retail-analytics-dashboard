# .streamlit/secrets.toml
# Copy this file to .streamlit/secrets.toml and fill in your values
# NEVER commit secrets.toml to version control!

# =============================================================================
# USER AUTHENTICATION
# =============================================================================
# Passwords are stored as SHA-256 hashes
# To generate a hash, run:
#   python -c "import hashlib; print(hashlib.sha256('your_password'.encode()).hexdigest())"

[passwords]
admin = "5e884898da28047d6b995a5b40cc0de9d8e09a4b31844e06e6e2e25cabb1a93f"  # "changeme123"
analyst = "a8b64babd0aca91a59bdbb7761b421d4f2bb38280d3eb6602e29df3fe6c16c6a"  # "viewonly456"

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

[aws]
access_key_id = "YOUR_AWS_ACCESS_KEY_ID"
secret_access_key = "YOUR_AWS_SECRET_ACCESS_KEY"
region = "us-west-2"
bucket_name = "your-retail-analytics-bucket"

# =============================================================================
# ANTHROPIC API KEY (Optional - can also use environment variable)
# =============================================================================
# Recommended: Use environment variable instead
#   export ANTHROPIC_API_KEY="sk-ant-api03-..."
#
# Alternative 1: Add to secrets.toml root level (Streamlit Cloud)
ANTHROPIC_API_KEY = "sk-ant-api03-YOUR_KEY_HERE"

# Alternative 2: Add under [anthropic] section (also supported)
# [anthropic]
# ANTHROPIC_API_KEY = "sk-ant-api03-YOUR_KEY_HERE"
